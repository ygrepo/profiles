# tmux
TMUX_CONFIG="~/.config/tmux/.tmux.conf"
alias tmas="tmux -f $TMUX_CONFIG attach-session -t"
alias tmns="tmux -f $TMUX_CONFIG new-session -s"
alias tmls="tmux list-sessions"
alias tmks="tmux kill-session -t"

